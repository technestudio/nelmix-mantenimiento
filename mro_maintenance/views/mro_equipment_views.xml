    <record model="ir.actions.act_window.view" id="action_equipment_cost_report_pivot_view">
        <field name="sequence" eval="2"/>
        <field name="view_mode">pivot</field>
        <field name="view_id" ref="equipment_cost_report_pivot_view"/>
        <field name="act_window_id" ref="action_equipment_cost_report"/>
