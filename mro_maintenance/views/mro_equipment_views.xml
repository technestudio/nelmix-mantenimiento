    <record model="ir.actions.act_window.view" id="action_equipment_cost_report_graph_view">
        <field name="sequence" eval="3"/>
        <field name="view_mode">graph</field>
        <field name="view_id" ref="equipment_cost_report_graph_view"/>
        <field name="act_window_id" ref="action_equipment_cost_report"/>
    </record>
    
    <menuitem name="Equipment Cost Report"
        action="action_equipment_cost_report"
        groups="mro_maintenance.group_maintenance_user"
        id="menu_maintenance_mro_equipment_cost_report"
        parent="menu_maintenance_reporting"
        sequence="10"/>
    
    <!-- Equipment Hierarchy Cost Report Views  -->
    <record id="equipment_cost_hierarchy_report_tree_view" model="ir.ui.view">
        <field name="name">mro.equipment.hierarchy.cost.report.tree</field>
        <field name="model">mro.equipment</field>
        <field name="arch" type="xml">
            <tree string="Equipment Hierarchy Cost Report" create="0">
                <field name="equipment_number"/>
                <field name="complete_name" string="Name"/>
                <field name="category_id"/>
                <field name="criticality"/>
                <field name="maintenance_team_id"/>
                <field name="hierarchy_act_mat_cost" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                <field name="hierarchy_act_tool_cost" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                <field name="hierarchy_act_labour_cost" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                <field name="currency_id" invisible='1'/>
            </tree>
        </field>
    </record>
    
    <record id="equipment_cost_hierarchy_report_pivot_view" model="ir.ui.view">
        <field name="name">mro.equipment.cost.report.pivot</field>
        <field name="model">mro.equipment</field>
        <field name="arch" type="xml">
            <pivot string="Equipment Cost Report">
                <field name="maintenance_team_id" type="row"/>
                <field name="category_id" type="row"/>
                <field name="hierarchy_act_mat_cost" type="measure"/>
                <field name="hierarchy_act_tool_cost" type="measure"/>
                <field name="hierarchy_act_labour_cost" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="equipment_cost_hierarchy_report_graph_view" model="ir.ui.view">
        <field name="name">mro.equipment.cost.report.graph</field>
        <field name="model">mro.equipment</field>
        <field name="arch" type="xml">
            <graph string="Equipment Cost Report" type="bar">
                <field name="maintenance_team_id" type="row"/>
                <field name="category_id" type="row"/>
                <field name="hierarchy_act_mat_cost" type="measure"/>
                <field name="hierarchy_act_tool_cost" type="measure"/>
                <field name="hierarchy_act_labour_cost" type="measure"/>
            </graph>
        </field>
    </record>
    
    <record id="action_equipment_hierarchy_cost_report" model="ir.actions.act_window">
        <field name="name">Equipment Cost Hierarchy Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mro.equipment</field>
        <field name="view_mode">tree</field>
        <field name="view_id" eval="False"/>
    </record>
    
    <record model="ir.actions.act_window.view" id="action_equipment_hierarchy_cost_report_tree_view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="equipment_cost_hierarchy_report_tree_view"/>
        <field name="act_window_id" ref="action_equipment_hierarchy_cost_report"/>
    </record>
    
    
    <record model="ir.actions.act_window.view" id="action_equipment_hierarchy_cost_report_pivot_view">
        <field name="sequence" eval="2"/>
        <field name="view_mode">pivot</field>
        <field name="view_id" ref="equipment_cost_hierarchy_report_pivot_view"/>
        <field name="act_window_id" ref="action_equipment_hierarchy_cost_report"/>
    </record>
    
    <record model="ir.actions.act_window.view" id="action_equipment_hierarchy_cost_report_graph_view">
        <field name="sequence" eval="3"/>
        <field name="view_mode">graph</field>
        <field name="view_id" ref="equipment_cost_hierarchy_report_graph_view"/>
        <field name="act_window_id" ref="action_equipment_hierarchy_cost_report"/>
    </record>
    
    
    <menuitem name="Equipment Hierarchy Cost Report"
        action="action_equipment_hierarchy_cost_report"
        groups="mro_maintenance.group_maintenance_user"
        id="menu_maintenance_mro_equipment_hierarchy_cost_report"
        parent="menu_maintenance_reporting"
        sequence="20"/>
</odoo>
