<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <!-- Location Assignment Views  -->
    <record id="action_mro_equipment_assign" model="ir.actions.act_window">
        <field name="name">Install</field>
        <field name="res_model">mro.equipment.location.assignment</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="mro_maintenance.model_mro_equipment" />
        <field name="binding_view_types">list</field>
    </record>

    <record id="mro_equipment_functional_location_assignment_form" model="ir.ui.view">
        <field name="name">mro.equipment.location.assignment</field>
        <field name="model">mro.equipment.location.assignment</field>
        <field name="arch" type="xml">
            <form>
                <group string="Function Location Assignment">
                    <field name="location_id" domain="[('default_warehouse', '=', False),('default_scrap', '=', False)]"/>
                    <field name="equipment_id"/>
                </group>
                <footer>
                    <button name="do_assign" type="object" string="Assign Location" class="oe_highlight"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
    <!-- Gauge Assignment Views  -->
    <record id="action_mro_equipment_gauge_assign" model="ir.actions.act_window">
        <field name="name">Install Gauge</field>
        <field name="res_model">mro.equipment.gauge.assignment</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="mro_maintenance.model_mro_equipment" />
        <field name="binding_view_types">list</field>
    </record>

    <record id="mro_equipment_gauge_assignment_form" model="ir.ui.view">
        <field name="name">mro.equipment.gauge.assignment</field>
        <field name="model">mro.equipment.gauge.assignment</field>
        <field name="arch" type="xml">
            <form>
                <group string="Gauge Assignment">
                    <group>
                        <field name="gauge_id"/>
                        <field name="oc_task_id" domain="[('category_id', '=', category_id)]"/>
                        <field name="threshold_id" widget="selection"/>
                        <field name="equipment_id" invisible="1"/>
                        <field name="category_id" invisible="1"/>
                    </group>
                </group>
                <footer>
                    <button name="do_assign" type="object" string="Assign Gauge" class="oe_highlight"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
    <!-- Meter Assignment Views  -->
    <record id="action_mro_equipment_meter_assign" model="ir.actions.act_window">
        <field name="name">Install Meter</field>
        <field name="res_model">mro.equipment.meter.assignment</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="mro_maintenance.model_mro_equipment" />
        <field name="binding_view_types">list</field>
    </record>

    <record id="mro_equipment_meter_assignment_form" model="ir.ui.view">
        <field name="name">mro.equipment.meter.assignment</field>
        <field name="model">mro.equipment.meter.assignment</field>
        <field name="arch" type="xml">
            <form>
                <group string="Meter Assignment">
                    <group>
                        <field name="meter_id"/>
                        <field name="pr_task_id" domain="[('category_id', '=', category_id)]"/>
                        <field name="theoretical_time"/>
                        <label for="theorical_utilization" string="Threshold Utilization"/>
                        <div class="o_row">
                            <field name="theorical_utilization"/>
                            /
                            <field name="meter_uom"/>
                        </div>
                        <field name="resource_calendar_id"/>
                        <field name="equipment_id" invisible="1"/>
                        <field name="category_id" invisible="1"/>
                    </group>
                </group>
                <footer>
                    <button name="do_assign" type="object" string="Assign Meter" class="oe_highlight"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
    <!-- Meter Assignment to Maintenance Plan Views  -->
    <record id="action_mro_equipment_plan_meter_assign" model="ir.actions.act_window">
        <field name="name">Install Meter</field>
        <field name="res_model">mro.equipment.plan.meter.assignment</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="mro_maintenance.model_mro_equipment" />
        <field name="binding_view_types">list</field>
    </record>

    <record id="mro_equipment_plan_meter_assignment_form" model="ir.ui.view">
        <field name="name">mro.equipment.plan.meter.assignment</field>
        <field name="model">mro.equipment.plan.meter.assignment</field>
        <field name="arch" type="xml">
            <form>
                <group string="Meter Assignment">
                    <group>
                        <field name="plan_meter_id"/>
                    </group>
                </group>
                <footer>
                    <button name="do_assign" type="object" string="Assign Meter" class="oe_highlight"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
    <!-- Equipment Views  -->
    <record id="equipmemts_tree_view" model="ir.ui.view">
        <field name="name">mro.equipment.tree</field>
        <field name="model">mro.equipment</field>
        <field name="arch" type="xml">
            <tree string="Equipments">
                <field name="equipment_number"/>
                <field name="name"/>
                <field name="category_id"/>
                <field name="criticality"/>
                <field name="employee_id"/>
                <field name="maintenance_team_id"/>
                <field name="activity_ids" widget="list_activity"/>
                <field name="location_id"/>
                <field name="parent_id" optional="hide"/>
                <field name="gauge_id" optional="hide"/>
                <field name="meter_id" optional="hide"/>
                <field name="plan_meter_id" string="Maintenance Plan Meter" optional="hide"/>
                <field name="state" optional="show" widget="badge" decoration-success="state == 'wh' or state == 'op'" decoration-warning="state == 'mn'" decoration-danger="state == 'br' or state == 'sc'"/>
                <field name="active" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="equipments_form_view" model="ir.ui.view">
        <field name="name">mro.equipment.form</field>
        <field name="model">mro.equipment</field>
        <field name="arch" type="xml">
            <form string="Equipments">
                <header>
                    <button name="%(action_mro_equipment_assign)d" type="action" groups="mro_maintenance.group_maintenance_user" string="Install" states="wh,br" class="oe_highlight"/>
                    <button name="action_put_warehouse" states="op,sc" string="Store in WH" type="object"/>
                    <button name="action_in_breakdown" states="op,sc" string="In Breakdown" type="object"/>
                    <button name="action_scrap" states="br,wh" string="Scrap" type="object"/>
                    <field name="state" widget="statusbar" required="True"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button  class="oe_stat_button" name="attachment_tree_view" type="object" icon="fa-files-o">
                            <field string="Documents" name="doc_count" widget="statinfo"/>
                        </button>
                        <button class="oe_inline oe_stat_button" name="action_view_maintenance_request" type="object" 
                            icon="fa-cogs">
                            <field string="MRO requests" name="mroreq_count" widget="statinfo"/>
                        </button>
                        <button class="oe_inline oe_stat_button" name="action_view_maintenance_order" type="object" 
                            icon="fa-cogs">
                            <field string="MRO Orders" name="mroord_count" widget="statinfo"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" text="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <field name="image_1920" widget="image" class="oe_avatar" nolabel="1" options="{'preview_image': 'image_128'}"/>
                    <div class="oe_title">
                        <label for="name" string="Equipment"/>
                        <field name="active" invisible="1"/>
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="equipment_number" required="True"/>
                            <field name="company_id" invisible="1"/>
                            <field name="model"/>
                            <field name="serial"/>
                            <field name="location_id" readonly="True"/>
                        </group>
                        <group>
                            <field name="category_id" required="True" options="{'no_open':True,'no_create':True}"/>
                            <field name="criticality"/>
                            <field name="employee_id"/>
                            <field name="work_email"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="Maintenance" string="Maintenance">
                            <group>
                                <group string='Maintenance Data'>
                                    <field name="maintenance_team_id"/>
                                    <field name="start_date" string="Installment Date"/>
                                    <field name="maintenance_date"/>
                                </group>
                                <group string='Asset Data'>
                                    <field name="asset_id"/>
                                    <field name="purchase_value" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    <field name="currency_id" invisible="1"/>
                                </group>
                            </group>
                        </page>
                        <page name="Warranty" string="Warranty">
                            <group>
                                <group>
                                    <field name="manufacturer_id" placeholder="Name, TIN, Email, or Reference"/>
                                    <label for="warranty_start_date" string="Warranty Validity Period"/>
                                        <div>
                                            <field name="warranty_start_date" class="oe_inline"/> - 
                                            <field name="warranty_end_date" class="oe_inline" nolabel="1"/>
                                        </div>
                                </group>
                                <group>
                                    <field name="vendor_id" widget="res_partner_many2one" placeholder="Name, TIN, Email, or Reference"/>
                                    <field name="purchase_date"/>
                                </group>
                            </group>
                        </page>
                        <page name="info" string="Info">
                            <group string="Equipment Technical Notes">
                                <field name="note" colspan="4" nolabel="1"/>
                            </group>
                        </page>
                        <page name="gauge" string="On Condition Maintenance">
                            <group>
                                <group>
                                    <field name="gauge_id"/>
                                    <field name="oc_task_id"/>
                                    <field name="threshold_id"/>
                                </group>
                                <group>
                                    <label for="threshold_min" string="Threshold Min"/>
                                    <div class="o_row">
                                         <field name="threshold_min"/>
                                        <field name="gauge_uom"/>
                                    </div>
                                    <label for="threshold_max" string="Threshold Max"/>
                                    <div class="o_row">
                                         <field name="threshold_max"/>
                                        <field name="gauge_uom"/>
                                    </div>
                                    <field name="date_gauge_install" widget='date'/>
                                </group>
                            </group>
                            <group>
                                <group>
                                    <button name="%(action_mro_equipment_gauge_assign)d" type="action" string="Assign Gauge" attrs="{'invisible': [('gauge_id', '!=', False)]}" class="oe_highlight"/>
                                    <button name="action_gauge_unassign" type="object" string="Unassign Gauge" attrs="{'invisible': [('gauge_id', '=', False)]}" class="oe_highlight"/>
                                </group>
                                <group>
                                    <button name="action_gauge_line_equipment" type="object" string="Gauge Measures" attrs="{'invisible': [('gauge_id', '=', False)]}" class="oe_highlight"/>
                                </group>
                            </group>
                        </page>
                        <page name="meter" string="Periodic Maintenance">
                            <group>
                                <group>
                                    <field name="meter_id"/>
                                    <field name="pr_task_id"/>
                                    <field name="theoretical_time"/>
                                    <label for="theorical_utilization" string="Threshold Utilization"/>
                                    <div class="o_row">
                                        <field name="theorical_utilization"/>
                                        <field name="meter_uom"/>
                                    </div>
                                    <field name="resource_calendar_id"/>
                                </group>
                                <group>
                                    <field name="date_meter_install" widget='date'/>
                                    <label for="actual_utilization" string="Actual Utilization"/>
                                    <div class="o_row">
                                         <field name="actual_utilization"/>
                                        <field name="meter_uom"/>
                                    </div>
                                </group>
                            </group>
                            <group>
                                <group>
                                    <button name="%(action_mro_equipment_meter_assign)d" type="action" string="Assign Meter" attrs="{'invisible': [('meter_id', '!=', False)]}" class="oe_highlight"/>
                                    <button name="action_meter_unassign" type="object" string="Unassign Meter" attrs="{'invisible': [('meter_id', '=', False)]}" class="oe_highlight"/>
                                </group>
                                <group>
                                    <button name="action_meter_line_equipment" type="object" string="Meter Measures" attrs="{'invisible': [('meter_id', '=', False)]}" class="oe_highlight"/>
                                </group>
                            </group>
                        </page>
                        <page name="plan_meter" string="Maintenance Plan">
                            <group>
                                <field name="plan_ids" nolabel="1" attrs="{'invisible': [('plan_meter_id', '=', False)]}" context="{'default_plan_meter_id': plan_meter_id}"/>
                            </group>
                            <group>
                                <group>
                                    <field name="plan_meter_id"/>
                                </group>
                                <group>
                                    <field name="plan_date_meter_install" widget='date'/>
                                    <label for="plan_actual_utilization" string="Actual Utilization"/>
                                    <div class="o_row">
                                         <field name="plan_actual_utilization"/>
                                        <field name="plan_meter_uom"/>
                                    </div>
                                </group>
                            </group>
                            <group>
                                <group>
                                    <button name="%(action_mro_equipment_plan_meter_assign)d" type="action" string="Assign Meter" attrs="{'invisible': [('plan_meter_id', '!=', False)]}" class="oe_highlight"/>
                                    <button name="action_plan_meter_unassign" type="object" string="Unassign Meter" attrs="{'invisible': [('plan_meter_id', '=', False)]}" class="oe_highlight"/>
                                </group>
                                <group>
                                    <button name="action_plan_meter_line_equipment" type="object" string="Meter Measures" attrs="{'invisible': [('plan_meter_id', '=', False)]}" class="oe_highlight"/>
                                </group>
                            </group>
                        </page>
                        <page name="hierarchy" string="Hierarchy">
                            <group>
                                <group name='parent'>
                                    <field name="parent_id"/>
                                </group>
                                <group name='parent'>
                                    <field name="child_all_count"/>
                                </group>
                            </group>
                            <group>
                                <group name='display_hierarchy'>
                                    <div id="o_equipment_right">
                                        <h4>Equipment Hierarchy Structure</h4>
                                        <field name="child_ids" readonly="1"/>
                                    </div>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    
    <record id="view_mro_equipment_kanban" model="ir.ui.view">
        <field name="name">mro.equipment.kanban</field>
        <field name="model">mro.equipment</field>
        <field name="arch" type="xml">
            <kanban default_order="criticality desc, maintenance_team_id">
                <field name="id"/>
                <field name="name"/>
                <field name="state"/>
                <field name="criticality"/>
                <field name="employee_id"/>
                <field name="message_needaction_counter"/>
                <field name="activity_ids"/>
                <field name="activity_state"/>
                <field name="maintenance_team_id"/>
                <field name="category_id"/>
                <field name="maintenance_date"/>
                <field name="location_id"/>
                <field name="image_128"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                            <field name="image_128" widget="image" class="o_kanban_image_fill_left" options="{'zoom': true, 'zoom_delay': 1000, 'background': true, 'preventClicks': false}"/>
                            <div class="oe_kanban_details">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title"><field name="name"/></strong><br/>
                                        <small class="o_kanban_record_subtitle">
                                            <t t-if="record.maintenance_date.raw_value and record.maintenance_date.raw_value lt (new Date())" t-set="red">oe_kanban_text_red</t>
                                            <span t-attf-class="#{red || ''}"><i><field name="maintenance_date"/></i></span>
                                            <span class="float-left text-left"><t t-if="record.location_id.raw_value"><field name="location_id"/></t></span>
                                        </small>
                                    </div>
                                    <span class="float-right text-right"><strong><field name="state"/></strong></span>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div>
                                        <field name="maintenance_team_id"/>
                                    </div>
                                    <div>
                                        <field name="category_id"/>
                                    </div>
                                </div>   
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="criticality" widget="priority"/>
                                        <field name="activity_ids" widget="kanban_activity"/>
                                        <t t-if="record.message_needaction_counter.raw_value">
                                            <span role="alert" class="oe_kanban_mail_new" title="Unread Messages"><i class="fa fa-comments" role="img" aria-label="Unread Messages"/><t t-raw="record.message_needaction_counter.raw_value"/></span>
                                        </t>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <img t-att-src="kanban_image('hr.employee', 'image_128', record.employee_id.raw_value)" t-att-title="record.employee_id.value" t-att-alt="record.employee_id.value" class="oe_kanban_avatar o_image_24_cover float-right"/>
                                    </div>
                                </div>
                                <div class="oe_clear"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <record id="equipments_search" model="ir.ui.view">
        <field name="name">Equipment Search</field>
        <field name="model">mro.equipment</field>
        <field name="arch" type="xml">
            <search string="Equipment Search">
                <field name="equipment_number"/>
                <field name="name"/>
                <field name="employee_id"/>
                <field name="maintenance_team_id"/>
                <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                <separator />
                <group expand="0" string="Group By">
                    <filter name="group_category" string="Category" context="{'group_by': 'category_id'}"/>
                    <filter name="group_criticality" string="Criticality" context="{'group_by': 'criticality'}"/>
                    <filter name="group_user" string="Assign to" context="{'group_by': 'employee_id'}"/>
                    <filter name="group_maintenance_state" string="Status" context="{'group_by': 'state'}"/>
                    <filter name="group_maintenance_team" string="Team" context="{'group_by': 'maintenance_team_id'}"/>
                </group>
                <searchpanel>
                    <field name="state"/>
                    <field name="maintenance_team_id" icon="fa-users"/>
                    <field name="criticality"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <record id="action_equipments" model="ir.actions.act_window">
        <field name="name">Equipments</field>
        <field name="res_model">mro.equipment</field>
        <field name="view_mode">kanban,tree,form,activity</field>
    </record>

    <record model="ir.actions.act_window.view" id="action_equipments_tree_view">
