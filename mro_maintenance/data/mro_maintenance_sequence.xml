<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data noupdate="1">
        <!-- Sequence for Maintenance Order -->       
        <record id="sequence_mro_order" model="ir.sequence">
            <field name="name">Maintenance order</field>
            <field name="code">mro.order</field>
            <field name="prefix">MOR</field>
            <field name="padding">8</field>
            <field name="company_id" eval="False"/>
            <field name="implementation">no_gap</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>

        <!-- Sequence for Maintenance Request -->       
        <record id="sequence_mro_request" model="ir.sequence">
            <field name="name">Maintenance request</field>
            <field name="code">mro.request</field>
            <field name="prefix">MRE</field>
            <field name="padding">8</field>
            <field name="company_id" eval="False"/>
            <field name="implementation">no_gap</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>
    </data>
</odoo>
